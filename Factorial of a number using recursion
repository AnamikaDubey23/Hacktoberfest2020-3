#include<stdio.h>
#include<conio.h>
int factorial(int x);
int main()
{   int x;
    printf("Enter the number which you want for factorial\n");
    scanf("%d",&x);
    x=factorial(x);
    printf("the value of factorial is %d",x);

    return 0;
}

int factorial(int x)
{
    if(x==1||x==0)
    {
        return 1;
    }
    else
    {
        return x * factorial(x-1);
    }
    
}
